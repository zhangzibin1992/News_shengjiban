<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_user"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:hint="请输入用户昵称"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:id="@+id/edt_password"
        android:layout_below="@+id/edt_user"
        android:hint="密码:6到16位字符"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/edt_password"
        android:orientation="horizontal">

        <Button android:id="@+id/btn_zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_sel"
        android:text="注册"
            android:textSize="19sp"/>

        <Button android:id="@+id/btn_wangji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_sel"
            android:text="忘记密码"
            android:textSize="19sp"/>

        <Button android:id="@+id/btn_denglu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_sel"
            android:text="登陆"
            android:textSize="19sp"/>

    </LinearLayout>
</RelativeLayout>
